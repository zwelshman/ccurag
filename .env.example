# Anthropic API Key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# GitHub Personal Access Token (optional, for higher rate limits)
GITHUB_TOKEN=your_github_token_here

# Organization to index
GITHUB_ORG=BHFDSC

# Test Mode - Set to true to use TEST_REPOS list from config.py for quick testing
# When enabled, only repositories in the TEST_REPOS list will be indexed
USE_TEST_REPOS=false

# Vector Store Backend (pinecone or chroma)
VECTOR_STORE_BACKEND=pinecone

# Pinecone Configuration (if using Pinecone backend)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=ccuindex
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1
PINECONE_DIMENSION=384
